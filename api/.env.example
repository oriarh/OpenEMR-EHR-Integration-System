PORT=4000
OPENEMR_BASE=http://localhost:8300
CLIENT_ID=replace_with_openemr_client_id
CLIENT_SECRET=replace_with_openemr_client_secret
USERNAME=replace_with_openemr_username
PASSWORD=replace_with_openemr_password
# OpenEMR commonly expects this in the token request ("users" for standard login users)
USER_ROLE=users
# Backward-compatible aliases if you prefer prefixed keys:
# OPENEMR_CLIENT_ID=replace_with_openemr_client_id
# OPENEMR_CLIENT_SECRET=replace_with_openemr_client_secret
# OPENEMR_USERNAME=replace_with_openemr_username
# OPENEMR_PASSWORD=replace_with_openemr_password
# OPENEMR_USER_ROLE=users
# Optional. Defaults to /oauth2/default/token
OPENEMR_TOKEN_PATH=/oauth2/default/token
# Optional. Defaults to read/write patient scopes below.
OPENEMR_TOKEN_SCOPE=openid api:oemr user/patient.read user/patient.write
# Comma-separated list of allowed browser origins for CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
# Optional timeout for OpenEMR upstream calls (milliseconds)
OPENEMR_TIMEOUT_MS=15000
